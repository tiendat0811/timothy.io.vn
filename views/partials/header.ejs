<style>
  header .navbar-collapse {
    z-index: 0;
  }
  .nav-link {
    color: #000000;
  }
  .nav-link:hover {
    color: #00a651;
  }
  header .top-bar {
    background-color: #00a651;
    height: auto;
    white-space: nowrap;
  }
  header .top-bar h1 {
    font-size: 1rem;
    color: white;
    justify-content: center;
    vertical-align: center;
    margin-bottom: 0;
    font-weight: 100;
  }

  header .nav-item a {
    color: #00a651;
    font-weight: 200;
    justify-content: center;
    vertical-align: center;
    margin-bottom: 0;
  }

  header .nav-item a.nav-link.active {
    color: #00a651;
  }
  header .top-bar .col-6 {
    align-items: center;
  }

  header .right-section {
    width: fit-content;
    background-color: #00a651;
    color: white;
    border-radius: 15px;
  }
  @media screen and (max-width: 768px) {
    header .right-section {
      margin-top: 10px;
      padding: 8px;
    }
  }
  .dropdown:hover .dropdown-menu {
    display: block;
  }
  .dropdown-item:hover a {
    color: #00a651;
  }
  header .logo {
    width: 100px;
    aspect-ratio: 1;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    header .logo {
      width: 60px;
    }
  }

  @media screen and (min-width: 768px) {
    header .nav-link {
      font-size: 1rem;
      white-space: nowrap; /* Ngăn ngừng trống trang */
    }
  }
</style>
<header>
  <div class="container-fluid top-bar">
    <div class="container d-lg-block d-none">
      <div class="row">
        <div class="col-4">
          <h1>Mai Linh Driver</h1>
        </div>
        <div class="col-8 text-end">
          <h1 class="align-middle">
            Tổng đài Taxi toàn quốc: 1055 | Tổng đài chăm sóc khách hàng toàn
            quốc: 1900.6789
          </h1>
        </div>
      </div>
    </div>
    <div class="container d-lg-none d-block">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Mai Linh Driver</h1>
        <h1>1055 | 1900.6789</h1>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg sticky-top z-3">
      <div class="container-fluid">
        <a class="navbar-brand active" href="/" title="ĐÈN LED FSL">
          <img
            src="<%= setting.logo %>"
            alt="Mai Linh Driver"
            class="logo m-0 p-0" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarScroll"
          aria-controls="navbarScroll"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarScroll">
          <ul
            class="navbar-nav nav-tabs ms-auto me-auto my-2 my-lg-0 navbar-nav-scroll"
            style="--bs-scroll-height: 300px">
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath === '/' ? 'active' : '' %>"
                href="/"
                ><i class="fa fa-home"></i> TRANG CHỦ</a
              >
            </li>

            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                id="dropdownMenuLink"
                >SẢN PHẨM</a
              >
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% categories.forEach((category) => { %>
                <li class="dropdown-item">
                  <a href="/product?category=<%= category.slug %>"
                    ><%= category.name %></a
                  >
                </li>
                <% }) %>
              </ul>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath === '/post' ? 'active' : '' %>"
                href="/post"
                >TIN TỨC</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath === '/about' ? 'active' : '' %>"
                href="/about"
                >GIỚI THIỆU</a
              >
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="/policy"
                role="button"
                id="dropdownMenuLink"
                >QUY ĐỊNH & CHÍNH SÁCH</a
              >
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li class="dropdown-item">
                  <a href="/policy/phuong-thuc-thanh-toan"
                    >Phương thức thanh toán</a
                  >
                </li>
                <li class="dropdown-item">
                  <a href="/policy/phuong-thuc-van-chuyen"
                    >Phương thức vận chuyển</a
                  >
                </li>
                <li class="dropdown-item">
                  <a href="/policy/chinh-sach-bao-hanh">Chính sách bảo hành</a>
                </li>
                <li class="dropdown-item">
                  <a href="/policy/chinh-sach-doi-tra">Chính sách đổi trả</a>
                </li>
                <li class="dropdown-item">
                  <a href="/policy/chinh-sach-bao-mat">Chính sách bảo mật</a>
                </li>
              </ul>
            </li>

            <li class="nav-item">
              <a
                class="nav-link <%= currentPath === '/contact' ? 'active' : '' %>"
                href="/contact"
                >LIÊN HỆ</a
              >
            </li>
          </ul>
          <ul class="navbar-nav">
            <!-- <li class="nav-item">
                <a class="nav-link" href="#">Ngôn ngữ</a>
              </li> -->
            <!-- check if have user show logout else show Login/Register -->
            <!-- <li class="nav-item" style="margin-right: 30px">
              <a
                class="button nav-link position-relative right-section text-white"
                href="/cart"
                id="cart-header"
                ><i class="fa-solid fa-cart-shopping me-1"></i>Giỏ hàng
                <span
                  class="position-absolute top-0 start-100 translate-middle badge rounded-pill"
                  style="background-color: #00a651; border: 3px solid white">
                  <span id="cart-length"></span>
                  <span class="visually-hidden">unread messages</span>
                </span></a
              >
            </li> -->
            <% if (user) { %> <% if (user.role === 'admin' ||user.role === 'mod'
            ) { %>
            <li class="nav-item" style="margin-right: 10px">
              <a class="button nav-link right-section text-white" href="/admin"
                ><i class="fa-solid fa-gear me-1"></i>Quản lý</a
              >
            </li>

            <% } %> <% if (user.role === 'user') { %>
            <li class="nav-item" style="margin-right: 10px">
              <a
                class="button nav-link right-section text-white"
                href="/account"
                ><i class="fa-solid fa-circle-user me-1"></i>Tài khoản</a
              >
            </li>

            <% } %>

            <li class="nav-item">
              <a
                class="button nav-link right-section text-white"
                href="#"
                onclick="logout()"
                ><i class="fa-solid fa-right-from-bracket me-1"></i>Đăng xuất</a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<script>
  let cart = JSON.parse(localStorage.getItem('cart'))
  if (cart && cart.length > 0) {
    let cartLength = $('#cart-length')
    cartLength.html(cart.length)
    cartLength.addClass('animate-flicker')
  } else {
    document.getElementById('cart-length').innerHTML = 0
  }
</script>
