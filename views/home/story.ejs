<style>
  .story-container {
    text-align: center;
    margin-top: 10px;
    margin-bottom: 10px;
    white-space: nowrap;
    overflow-x: auto;
  }
  .circle {
    display: inline-block;
    margin: 10px;
    cursor: pointer;
    overflow: hidden;
    text-align: center;
  }

  .circle:hover {
    transform: scale(1.2);
    transition: transform 0.5s;
  }

  .circle img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid rgb(206, 206, 206);
    object-fit: cover;
  }

  .description {
    margin-top: 5px;
  }
</style>

<div class="story-container">
  <% setting.banner.sort((a, b) => a.position - b.position).forEach((banner,
  index) => { %>
  <div class="circle">
    <div>
      <a href="<%= banner.link %>">
        <img src="<%= banner.image %>" alt="" />
        <p class="description"><%= banner.name %></p>
      </a>
    </div>
  </div>
  <% }) %>
</div>
